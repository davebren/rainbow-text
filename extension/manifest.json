{
  "manifest_version": 3,
  "name": "rainbow-text",
  "version": "0.1",
  "description": "Changes the color of each character (A-Z, 0-9) on a webpage.",
  "permissions": ["tabs", "activeTab", "scripting", "storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["service-worker.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}